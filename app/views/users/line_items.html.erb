<p id="notice"><%= notice %></p>

<h1>Users - Line items</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <tbody>
    <% @user.line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product.title %></td>
        <td><%= line_item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

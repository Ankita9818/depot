<p id="notice"><%= notice %></p>

<h1>Users - Orders</h1>

<table class="text-center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Pay type</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.email %></td>
        <td><%= order.address %></td>
        <td><%= order.pay_type %></td>
        <td><%= order.total_amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

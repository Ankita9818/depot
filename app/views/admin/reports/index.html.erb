<h1>Reports</h1>
<p id="notice"><%= notice %></p>

<h3>Orders in last 5 days</h3>
<%= form_for(:report) do |form| %>
  <div class="field">
    <%= form.label :from_date %>
    <%= form.date_field :from_date, id: :from_date %>
  </div>

  <div class="field">
    <%= form.label :to_date %>
    <%= form.date_field :to_date, id: :to_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
      </tr>
    <% end %>
  </tbody>
</table>
